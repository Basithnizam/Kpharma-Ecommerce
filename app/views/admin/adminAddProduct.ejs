<%-include('../layouts/adminPartials/adminHeader.ejs') %>

  <div class="container">
    <div class="row d-flex justify-content-center p-5">
      <div class="">
        <h1 class='fw-bold d-flex justify-content-center'>Add Product</h1>


        <form method="post" enctype="multipart/form-data" action="/admin/addProduct">
          <div class="form-group">
            <label for="exampleFormControlInput1">Product Name</label>
            <input name="productName" type="text" class="form-control border border-dark" id="exampleFormControlInput1"
              placeholder="Product Name" required>
          </div>
          <div class="form-group">
            <label for="exampleFormControlSelect1">Category</label>
            <select name="category" class="form-select border border-dark" aria-label="Default select example" required>
              <option selected>Select the Category</option>
              <% data.forEach(function(datas,index) { %>

                <option value="<%= datas._id %>">
                  <%= datas.category %>
                </option>

                <% }); %>

            </select>
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">Price</label>
            <input name="productPrice" type="number" class="form-control border border-dark"
              id="exampleFormControlInput1" placeholder="Enter the price in rupees" required>
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">In Stock</label>
            <input name="inStock" type="number" class="form-control border border-dark"
                id="exampleFormControlInput1" placeholder="Enter the stock">
          </div>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">Description </label>
            <textarea name="description" class="form-control border border-dark" id="exampleFormControlTextarea1"
              rows="3" required></textarea>
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">Product Image</label>
            <input name="productImage" type="file" class="form-control border border-dark" id="exampleFormControlInput1"
              placeholder="Image of the product" required>
          </div>
          <div class="form-group py-3">

            <input type="submit" class="btn btn-primary form-control border border-dark" id="exampleFormControlInput1">
          </div>

        </form>

      </div>
    </div>
  </div>


  <%-include('../layouts/adminPartials/footer.ejs') %>