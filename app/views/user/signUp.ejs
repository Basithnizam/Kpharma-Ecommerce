<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <title>SignUp</title>
</head>

<body>
  <% if(emailError.length>0){ %>
    <span class="error">
      <span class="alert alert-danger sticky-top  d-flex justify-content-around fw-bold ">
        <%= emailError %>
      </span>
    </span>

    <% }%>
    <% if(numberError.length>0){ %>
      <span class="error">
        <span class=" alert alert-danger sticky-top d-flex justify-content-around fw-bold">
          <%= numberError %>
        </span>
      </span>
      <% }%>
      <% if(timeOut.length>0){ %>
        <span class="error">
          <span class=" alert alert-danger sticky-top d-flex justify-content-around fw-bold">
            <%= timeOut %>
          </span>
        </span>
        <% }%>
     
        
      


          <div class="d-flex justify-content-around">
            <div class="col-3 p-4 d-flex"><%- include('../layouts/userPartials/userSideDrawer.ejs') %></div>
            <div class="col-5 d-flex justify-content-center"><img style="height: 50px; margin: 1rem; "
                src="images/KPharmakPharmaLogo.png" alt="LOGO"></div>
            <div class="col-4 py-4 d-flex justify-content-end"><a href="/login"><button type="button"
                  class="btn btn-primary">Login</button></a></div>

          </div>



          <section class="vh-100 " style="background-color: #eee;">
            <div class="container h-100">
              <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                  <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                      <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                          <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                          <form class="mx-1 mx-md-4" action="/signUp" method="post" id="signup-form">

                            <div class="d-flex flex-row align-items-center mb-4">
                              <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                              <div class="form-outline flex-fill mb-0">
                                <input type="text" id="name" class="form-control" name="name" required />
                                <label class="form-label" for="form3Example1c">Your Name</label>
                                <br><span id="nameError" style="color: red; " class="d-none"></span>
                              </div>
                            </div>

                            <div class="d-flex flex-row align-items-center mb-4">
                              <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                              <div class="form-outline flex-fill mb-0">
                                <input type="email" id="email" class="form-control" name="email" required />
                                <label class="form-label" for="form3Example3c">Your Email</label>
                                <br><span id="emailError" style="color: red; " class="d-none"></span>
                                <% if(emailError.length>0){ %>
                                  <span class="error">
                                    <p class="text-danger">
                                      <%= emailError %>
                                    </p>
                                  </span>

                                  <% } %>



                              </div>
                            </div>

                            <div class="d-flex flex-row align-items-center mb-4">
                              <i class="fa fa-phone fa-lg me-3 fa-fw"></i>
                              <div class="form-outline flex-fill mb-0">
                                <input type="number" id="phone" class="form-control" name="phone" required />
                                <label class="form-label" for="form3Example3c">Mobile Number</label>
                                <br><span id="numberError" style="color: red; " class="d-none"></span>
                                <% if(numberError.length>0){ %>
                                  <span class="error">
                                    <p class="text-danger">
                                      <%= numberError %>
                                    </p>
                                  </span>

                                  <% } %>
                              </div>
                            </div>

                            <div class="d-flex flex-row align-items-center mb-4">
                              <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                              <div class="form-outline flex-fill mb-0">
                                <input type="password" id="password" class="form-control " name="password" required />
                                <label class="form-label" for="form3Example4c">Password</label>
                              </div>
                            </div>

                            <div class="d-flex flex-row align-items-center mb-4">
                              <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                              <div class="form-outline flex-fill mb-0">
                                <input type="password" id="confirm-password" class="form-control" />
                                <label class="form-label" for="form3Example4cd">Repeat your password</label>
                                <span id="password-mismatch" style="color: red; display: none;">Passwords do not
                                  match</span>
                              </div>
                            </div>

                            <div class="d-flex flex-row align-items-center mb-4">
                              <input type="hidden" name="blocked" value="false">
                            </div>

                            <div class="form-check d-flex justify-content-center mb-5">
                              <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c"
                                required />
                              <label class="form-check-label" for="form2Example3">
                                I agree all statements in <a href="#!">Terms of service</a>
                              </label>
                            </div>

                            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                              <button type="submit" onclick="return validateForm()" id="submit-button"
                                class="btn btn-primary btn-lg" >Sign
                                Up</button>
                            </div>

                          </form>

                        </div>
                        <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                          <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                            class="img-fluid" alt="Sample image">

                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>




          <script>
            var nameInput = document.getElementById('name');
            var emailInput = document.getElementById('email');
            var numberInput = document.getElementById('phone');
            var submitButton = document.getElementById('submit-button');



            //To validate name 
            function validateName() {
              console.log('validateName is  called')

              var nameError = document.getElementById('nameError');
              if (nameInput.value.trim() === '') {
                console.log('value found null');
                nameError.classList.remove('d-none');
                nameError.textContent = 'Name is required';

                return false
              } else if (nameInput.value !== nameInput.value.trimStart()) {
                nameError.classList.remove('d-none');
                nameError.textContent = 'Space is not in starting';
                return false
              } else if (nameInput.value !== nameInput.value.trimEnd()) {
                nameError.classList.remove('d-none');
                nameError.textContent = 'Space is not in Ending';
                return false
              } else {
                nameError.classList.add('d-none')
                return true
              }
            }
            function validateEmail() {
              console.log('validateEmail is called');
              var emailError = document.getElementById('emailError');
              var emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

              if (emailInput.value.trim() === '') {
                console.log('value found null');
                emailError.classList.remove('d-none');
                emailError.textContent = 'Email is required';
                return false
              } else if (!emailPattern.test(emailInput.value)) {
                emailError.classList.remove('d-none');
                emailError.textContent = 'Invalid email format';
                return false
              } else {
                emailError.classList.add('d-none');
                return true
              }
            }
            function validateNumber() {
              console.log('validateNumber is called');

              var numberError = document.getElementById('numberError');
              var numberPattern = /^\d{10}$/;

              if (numberInput.value.trim() === '') {
                console.log('value found null');
                numberError.classList.remove('d-none');
                numberError.textContent = 'Phone number is required';
                return false
              } else if (!numberPattern.test(numberInput.value)) {
                numberError.classList.remove('d-none');
                numberError.textContent = 'phone number consist of 10 digits';
                return false

              } else {
                numberError.classList.add('d-none');
                return true
              }
            }



            nameInput.addEventListener('blur', validateName)
            emailInput.addEventListener('blur', validateEmail)
            numberInput.addEventListener('blur', validateNumber)






            // passord  matching  
            const passwordInput = document.getElementById('password');
            const confirmPasswordInput = document.getElementById('confirm-password');
            const passwordMismatchMessage = document.getElementById('password-mismatch');



            // Function to check if passwords match
            function checkPasswordMatch() {
              console.log('checkPassword called')
              if (passwordInput.value === confirmPasswordInput.value) {
                passwordMismatchMessage.style.display = 'none'; // Hide the error message
                submitButton.disabled = false; // Enable the submit button
              } else {
                passwordMismatchMessage.style.display = 'block'; // Show the error message
                submitButton.disabled = true; // Disable the submit button
              }
              console.log('Outside the if statement')
              // To remove the "blur" event listener
              confirmPasswordInput.removeEventListener('blur', blurEventListener);
              passwordInput.addEventListener('change', checkPasswordMatch);
              confirmPasswordInput.addEventListener('change', checkPasswordMatch);
            }

            const blurEventListener = () => {
              console.log('Blur event');
              checkPasswordMatch();
            };
            confirmPasswordInput.addEventListener('blur', blurEventListener);



            //Functions to hide error form back end
            const errorSpans = document.querySelectorAll('span.error');
            const hideErrorSpans = () => {
              console.log('hideErrorSpans called');
              errorSpans.forEach((span) => {
                span.style.display = 'none'; // Hide the span
              });
            };
            setTimeout(hideErrorSpans, 3000);



            function validateForm() {
              
              console.log('validate form is called');
              var isNameValid = validateName();
              var isEmailValid = validateEmail();
              var isNumberValid = validateNumber();

              

              return isNameValid && isEmailValid && isNumberValid;
            }

          </script>









</body>
