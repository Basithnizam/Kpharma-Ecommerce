<script>
  function editName() {
      var btnName = document.getElementById('btnName');
      console.log('editName is called');

      // Retrieve the current state from the data-state attribute
      var currentState = btnName.getAttribute('data-state');

      if (currentState === 'pen') {
          btnName.innerHTML = '<i class="fa-solid fa-check"></i>';
          btnName.setAttribute('data-state', 'check');
          btnName.classList.remove('btn-outline-danger')
          btnName.classList.add('btn-success')
          
      } else {
          console.log('else is called');
          btnName.innerHTML = '<i class="fa-solid fa-pen"></i>';
          btnName.setAttribute('data-state', 'pen');
